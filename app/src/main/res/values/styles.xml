<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="control_text_style_title">
        <item name="android:textSize">@dimen/control_text_size_title</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_style_subtitle">
        <item name="android:textSize">@dimen/control_text_size_subtitle</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_body1">
        <item name="android:textSize">@dimen/control_text_size_body1</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_description">
        <item name="android:textSize">@dimen/control_text_size_description</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_display</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_display">
        <item name="android:textSize">@dimen/control_text_size_display</item>
        <item name="android:fontFamily">@string/control_font_family_display</item>
    </style>

    <style name="control_text_under_display">
        <item name="android:textSize">@dimen/control_text_size_under_display</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="control_text_button">
        <item name="android:textSize">@dimen/control_text_size_button</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="control_weather_grid_item">
        <item name="android:gravity">center|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="ClearableEditText">
        <item name="clearButtonAlwaysVisible">false</item>
        <item name="clearButtonDrawable">@drawable/ic_clear</item>
        <item name="clearButtonHeight">16dp</item>
        <item name="clearButtonPadding">5dp</item>
        <item name="clearButtonPosition">end</item>
        <item name="clearButtonWidth">16dp</item>
    </style>

    <style name="CityTagTitle">
        <item name="android:textAppearance">@style/control_text_style_subtitle</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:paddingTop">@dimen/control_padding_space4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/control_margin5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/control_margin2</item>
        <item name="android:paddingEnd">@dimen/control_margin2</item>

    </style>

    <style name="CityTagBackground">
        <item name="android:background">@drawable/background_city_tag</item>
    </style>

    <style name="CityTagText">
        <item name="android:textAppearance">@style/control_text_description</item>
        <item name="android:textColor">@color/city_tag_background</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal|center_vertical</item>
        <item name="android:background">@drawable/ripple_city_tag</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:elevation">0.8dp</item>
    </style>
</resources>