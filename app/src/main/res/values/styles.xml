<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="control_text_style_title">
        <item name="android:textSize">@dimen/control_text_size_title</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_body1">
        <item name="android:textSize">@dimen/control_text_size_body1</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="control_text_display">
        <item name="android:textSize">@dimen/control_text_size_display</item>
        <item name="android:fontFamily">@string/control_font_family_display</item>
    </style>

    <style name="control_text_under_display">
        <item name="android:textSize">@dimen/control_text_size_under_display</item>
        <item name="android:lineSpacingMultiplier">1.03</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="control_text_button">
        <item name="android:textSize">@dimen/control_text_size_button</item>
        <item name="android:fontFamily">@string/control_font_family_toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="control_weather_grid_item">
        <item name="android:gravity">center|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

</resources>