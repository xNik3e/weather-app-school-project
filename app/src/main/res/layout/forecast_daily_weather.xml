<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="3dp"
    android:paddingTop="5dp"
    android:paddingEnd="3dp"
    android:paddingBottom="5dp">
    <com.example.weatherapp.utils.view_services.AlwaysMarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/control_text_body1"
        android:textColor="@color/text_primary_dark"
        android:text="PoniedziaÅ‚ek"/>

    <com.example.weatherapp.utils.view_services.AlwaysMarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day_date"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="12sp"
        android:textAppearance="@style/control_text_body1"
        android:textColor="@color/text_primary_dark"
        android:text="Apr 27"/>

    <ImageView
        android:layout_width="@dimen/control_icon_size_button"
        android:layout_height="@dimen/control_icon_size_button"
        android:id="@+id/forecast_daily_weather_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/control_margin1"
        android:src="@drawable/ic_downpour"/>

    <com.example.weatherapp.utils.view_services.AlwaysMarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_daily_weather_description"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/nothing"
        android:textAppearance="@style/control_text_body1"
        android:textColor="@color/text_primary_dark"/>


</LinearLayout>