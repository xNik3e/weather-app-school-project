<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/control_margin5"
    android:paddingStart="16dp"
    android:paddingTop="@dimen/control_padding_space2"
    android:paddingEnd="16dp"
    android:paddingBottom="@dimen/control_padding_space2">

    <FrameLayout
        android:id="@+id/text_button"
        style="@style/CityTagBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusedByDefault="true"
        android:focusable="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:onClick="myFun">

        <TextView
            android:id="@+id/text"
            style="@style/CityTagText"
            android:drawablePadding="3dp"
            android:text="@string/locate"
            app:drawableStartCompat="@drawable/ic_gps_black"
            app:drawableTint="@color/icon_color_active_dark" />


    </FrameLayout>


</RelativeLayout>